SOURCE_MAIN := Main.java
OBJECT_MAIN := $(subst .java,.class,$(SOURCE_MAIN))

SOURCE_QUICK_SORT := QuickSort.java
OBJECT_QUICK_SORT := $(subst .java,.class,$(SOURCE_QUICK_SORT))

SOURCE_BINARY_SEARCH := BinarySearch.java
OBJECT_BINARY_SEARCH := $(subst .java,.class,$(SOURCE_BINARY_SEARCH)) 

$(OBJECT_MAIN) : $(SOURCE_MAIN) $(OBJECT_QUICK_SORT) $(OBJECT_BINARY_SEARCH)
	javac $(SOURCE_MAIN)
$(OBJECT_QUICK_SORT) : $(SOURCE_QUICK_SORT)
	javac $(^)
$(OBJECT_BINARY_SEARCH) : $(SOURCE_BINARY_SEARCH)
	javac $(^)
PHONY clear:
	rm $(OBJECT_QUICK_SORT) $(OBJECT_MAIN) $(OBJECT_BINARY_SEARCH)
